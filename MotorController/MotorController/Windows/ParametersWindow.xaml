                        <i:Interaction.Behaviors>
                            <Helpers:AllowableCharactersTextBoxBehavior RegularExpression="^[0-9.\-]+$" MaxLength="12"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBlock Grid.Column="2" Text="Count" ></TextBlock>
